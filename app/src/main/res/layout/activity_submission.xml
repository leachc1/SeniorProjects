<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".submission">

    <EditText
        android:id="@+id/editText"
        android:layout_width="165dp"
        android:layout_height="67dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Submit a Discount!"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="24dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:text="Restaurant/Bar"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="133dp" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="Retail Store"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="136dp" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="84dp"
        android:layout_height="35dp"
        android:text="Other"
        tools:layout_editor_absoluteX="273dp"
        tools:layout_editor_absoluteY="133dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Select discount type"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="98dp" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="393dp"
        android:layout_height="144dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="336dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="378dp"
            android:layout_height="111dp"
            android:hint="Enter discount details here" />
    </android.support.design.widget.TextInputLayout>

    <EditText
        android:id="@+id/editText3"
        android:layout_width="190dp"
        android:layout_height="42dp"
        android:ems="10"
        android:text="Enter discount details"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="300dp" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Enter discount location"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="184dp" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="381dp"
        android:layout_height="55dp"
        android:ems="10"
        android:hint="Enter discount expiration date here"
        android:inputType="date"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="547dp" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="252dp"
        android:layout_height="47dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Enter discount expiration date"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="500dp" />

    <EditText
        android:id="@+id/editText8"
        android:layout_width="375dp"
        android:layout_height="47dp"
        android:ems="10"
        android:hint="Enter discount location here"
        android:inputType="textPostalAddress"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="229dp" />

</android.support.constraint.ConstraintLayout>